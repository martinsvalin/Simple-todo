<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr class="task">
    <td>
      <%= completed(task) %>
      <%= task.name %>
    </td>
    <td class="button"><%= link_to 'Edit', edit_task_path(task), class: 'btn primary' %></td>
    <td class="button"><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete, class: 'btn danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_task_path, class: 'btn success' %>
